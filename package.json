{
  "name": "monday-integration-quickstart-app-typescript",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "npm run stop && npm run client-build && concurrently \"ts-node-dev --watch ./.env ./src/server.ts\" \"npm run expose\"",
    "dev-server": "npm run dev",
    "build": "tsc && cd client && npm install && npm run build && cd ..",
    "start": "node dist/server.js",
    "expose": "mapps tunnel:create -p 8080",
    "stop": "npx kill-port 8080",
    "deploy": "npm run client-build && mapps code:push --client-side -d client/build -i 11049232",
    "client-build": "cd client && npm run build",
    "client-dev": "cd client && npm run dev",
    "fetch:schema": "bash fetch-schema.sh",
    "codegen": "graphql-codegen",
    "fetch:generate": "npm run fetch:schema && npm run codegen",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@mondaydotcomorg/api": "^7.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^5.0.1",
    "express": "^4.17.1",
    "graphql": "^16.8.2",
    "graphql-request": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "monday-sdk-js": "^0.5.2",
    "node-fetch": "^3.3.2",
    "querystring": "^0.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-operations": "^4.4.0",
    "@mondaycom/apps-sdk": "^3.0.11",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^24.3.1",
    "concurrently": "^8.2.2",
    "cross-port-killer": "^1.2.1",
    "debug": "~2.6.9",
    "eslint": "^v6.8.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.7",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
