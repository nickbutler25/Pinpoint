{
  "name": "monday-location-filter",
  "version": "1.0.0",
  "description": "Enhanced location filter for Monday.com boards",
  "license": "MIT",
  "scripts": {
    "dev": "npm run client-build && concurrently \"npm run server-dev\" \"npm run tunnel\"",
    "dev-local": "concurrently \"npm run server-dev\" \"npm run client-dev\"",
    "server-dev": "ts-node-dev --watch ./.env ./src/server.ts",
    "client-dev": "cd client && npm run dev",
    "client-build": "cd client && npm run build",
    "build": "npm run build-server && npm run client-build",
    "build-server": "tsc",
    "start": "node dist/server.js",
    "tunnel": "npx localtunnel --port 8080",
    "deploy": "npm run build && mapps code:push --client-side -d client/build",
    "test": "echo \"No tests yet\"",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "localtunnel": "^2.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}